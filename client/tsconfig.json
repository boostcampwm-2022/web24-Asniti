{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["DOM", "es2015.iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@mocks/*": ["src/mocks/*"],
      "@stores/*": ["src/stores/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@constants/*": ["src/constants/*"],
      "@apis/*": ["src/apis/*"],
      "@hooks/*": ["src/hooks/*"],
      "@errors/*": ["src/errors/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/*"],
      "@@types/*": ["src/types/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "config"],
  "exclude": ["node_modules", "build", "dist"],
  "references": [{ "path": "../shared" }]
}
