{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@mocks/*": ["src/mocks/*"],
      "@stores/*": ["src/stores/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@constants/*": ["src/constants/*"],
      "@apis/*": ["src/apis/*"],
      "@@types/*": ["src/types/*"]
    }
  },
  "include": ["src", "config"],
  "exclude": ["node_modules", "build", "dist"],
  "references": [{ "path": "../shared" }]
}
