{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/common/layouts/*"],
      "@components/*": ["src/common/components/*"],
      "@features/*": ["src/features/*"],
      "@mocks/*": ["src/mocks/*"],
      "@stores/*": ["src/stores/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": ["src", "config"],
  "exclude": ["node_modules", "build", "dist"]
}